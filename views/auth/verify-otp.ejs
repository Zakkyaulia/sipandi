<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifikasi OTP - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .font-poppins {
            font-family: 'Poppins', sans-serif;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.75);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.6);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        }

        .otp-input {
            width: 3rem;
            height: 3.5rem;
            text-align: center;
            font-size: 1.5rem;
            border-radius: 0.75rem;
            /* rounded-xl */
            border: 1px solid rgba(209, 213, 219, 0.8);
            background-color: rgba(255, 255, 255, 0.6);
            transition: all 0.2s;
        }

        .otp-input:focus {
            outline: none;
            background-color: white;
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            transform: translateY(-2px);
        }
    </style>
</head>

<body class="min-h-screen relative font-sans text-gray-900 bg-gray-900 flex items-center justify-center p-6">

    <!-- Background -->
    <div class="fixed inset-0 -z-10">
        <img src="/images/Kantor_Gubernur_Sumatra_Barat_oleh_Denas.jpg" alt="Background"
            class="w-full h-full object-cover blur-[3px] scale-105">
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/80 via-emerald-800/60 to-teal-900/70"></div>
    </div>

    <!-- Main Card -->
    <div class="w-full max-w-[500px] glass-card rounded-3xl p-8 md:p-10 animate-fade-in-up shadow-2xl relative z-10">

        <!-- Header -->
        <div class="text-center mb-8">
            <div
                class="inline-flex justify-center items-center bg-white/80 p-4 rounded-full shadow-md mb-6 backdrop-blur-sm">
                <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                    </path>
                </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-800 font-poppins mb-2">Verifikasi Keamanan</h2>
            <p class="text-gray-600 text-sm leading-relaxed">
                Kami telah mengirimkan 6 digit kode rahasia ke email <br>
                <span
                    class="font-bold text-emerald-700 bg-emerald-50/50 px-2 py-0.5 rounded border border-emerald-100/50">
                    <%= email %>
                </span>
            </p>
        </div>

        <!-- Feedback Messages -->
        <% if (success) { %>
            <div class="bg-green-50/90 backdrop-blur-sm border border-green-200 text-green-700 px-4 py-3 rounded-xl flex items-center gap-3 text-sm mb-6 animate-pulse shadow-sm"
                role="alert">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="font-medium">
                    <%= success %>
                </span>
            </div>
            <% } %>

                <% if (error) { %>
                    <div class="bg-red-50/90 backdrop-blur-sm border border-red-200 text-red-600 px-4 py-3 rounded-xl flex items-center gap-3 text-sm mb-6 animate-pulse shadow-sm"
                        role="alert">
                        <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="font-medium">
                            <%= error %>
                        </span>
                    </div>
                    <% } %>

                        <!-- OTP Form -->
                        <form id="otpForm" action="/verify-otp" method="POST" class="space-y-8">
                            <input type="hidden" name="email" value="<%= email %>">
                            <input type="hidden" name="otp" id="finalOtp">

                            <!-- 6 Digit Boxes -->
                            <div class="flex justify-center gap-2 sm:gap-3">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800" autofocus
                                    oninput="handleInput(this, 1)" onkeydown="handleBackspace(this, event, 1)">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800"
                                    oninput="handleInput(this, 2)" onkeydown="handleBackspace(this, event, 2)">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800"
                                    oninput="handleInput(this, 3)" onkeydown="handleBackspace(this, event, 3)">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800"
                                    oninput="handleInput(this, 4)" onkeydown="handleBackspace(this, event, 4)">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800"
                                    oninput="handleInput(this, 5)" onkeydown="handleBackspace(this, event, 5)">
                                <input type="text" maxlength="1" class="otp-input font-bold text-gray-800"
                                    oninput="handleInput(this, 6)" onkeydown="handleBackspace(this, event, 6)">
                            </div>

                            <button type="submit" id="submitBtn" disabled
                                class="w-full bg-emerald-600 hover:bg-emerald-700 disabled:bg-gray-400/50 disabled:cursor-not-allowed text-white font-bold py-4 rounded-xl shadow-lg shadow-emerald-600/30 hover:shadow-emerald-600/40 transform hover:-translate-y-0.5 transition-all duration-300 flex items-center justify-center gap-2">
                                <span>Verifikasi Kode</span>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </button>
                        </form>

                        <!-- Countdown Timer -->
                        <div class="mt-8 text-center border-t border-gray-200/50 pt-6">
                            <p class="text-sm text-gray-500 mb-2 font-medium">Belum menerima kode?</p>

                            <div id="timerSection">
                                <span class="text-sm text-gray-600">Kirim ulang dalam </span>
                                <span id="countdown"
                                    class="text-sm font-bold text-emerald-600 tabular-nums">00:30</span>
                            </div>

                            <div id="resendSection" class="hidden">
                                <form action="/forgot-password" method="POST">
                                    <input type="hidden" name="email" value="<%= email %>">
                                    <button type="submit"
                                        class="text-emerald-700 hover:text-emerald-800 font-bold text-sm hover:underline flex items-center justify-center gap-1 mx-auto transition-colors">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                                            </path>
                                        </svg>
                                        Kirim Ulang Kode
                                    </button>
                                </form>
                            </div>
                        </div>
    </div>

    <!-- Footer -->
    <div class="absolute bottom-6 text-center text-white/50 text-xs font-light tracking-wider w-full">
        &copy; <%= new Date().getFullYear() %> Biro Organisasi Provinsi Sumatera Barat
    </div>

    <script>
        // 1. Logic Input OTP (Pindah-pindah box)
        function handleInput(elm, index) {
            elm.value = elm.value.replace(/[^0-9]/g, ''); // Hanya angka

            if (elm.value.length > 0) {
                if (index < 6) {
                    // Fokus ke box berikutnya
                    const nextInput = document.querySelectorAll('.otp-input')[index];
                    if (nextInput) nextInput.focus();
                }
            }
            checkFullOtp();
        }

        function handleBackspace(elm, event, index) {
            if (event.key === 'Backspace' && elm.value.length === 0) {
                if (index > 1) {
                    // Balik ke box sebelumnya dan hapus isinya
                    const prev = document.querySelectorAll('.otp-input')[index - 2];
                    if (prev) {
                        prev.focus();
                        prev.value = '';
                    }
                }
            }
            // Logic tambahan: izinkan paste code (Ctrl+V)
            setTimeout(checkFullOtp, 10);
        }

        // Logic Paste OTP (User copas 123456 langsung ke box pertama)
        const firstInput = document.querySelector('.otp-input');
        if (firstInput) {
            firstInput.addEventListener('paste', function (e) {
                e.preventDefault();
                const pasteData = (e.clipboardData || window.clipboardData).getData('text').trim();
                // Ambil hanya 6 digit pertama
                const cleanData = pasteData.replace(/[^0-9]/g, '').substring(0, 6);

                if (cleanData.length === 6) {
                    const inputs = document.querySelectorAll('.otp-input');
                    const digits = cleanData.split('');
                    inputs.forEach((input, i) => {
                        input.value = digits[i];
                    });
                    inputs[5].focus(); // Fokus ke box terakhir
                }
                checkFullOtp();
            });
        }

        // Cek apakah semua box terisi untuk enable tombol
        function checkFullOtp() {
            const inputs = document.querySelectorAll('.otp-input');
            let code = '';
            inputs.forEach(input => code += input.value);

            const finalOtpInput = document.getElementById('finalOtp');
            if (finalOtpInput) finalOtpInput.value = code;

            const btn = document.getElementById('submitBtn');
            if (code.length === 6) {
                btn.disabled = false;
                btn.classList.remove('bg-gray-400/50', 'cursor-not-allowed');
                btn.classList.add('bg-emerald-600', 'hover:bg-emerald-700', 'shadow-lg');
            } else {
                btn.disabled = true;
                btn.classList.add('bg-gray-400/50', 'cursor-not-allowed');
                btn.classList.remove('bg-emerald-600', 'hover:bg-emerald-700', 'shadow-lg');
            }
        }

        // 2. Logic Countdown Timer (30 Detik)
        let timeLeft = 30; // 30 detik
        const countdownEl = document.getElementById('countdown');
        const timerSection = document.getElementById('timerSection');
        const resendSection = document.getElementById('resendSection');

        if (countdownEl && timerSection && resendSection) {
            const timer = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    timerSection.classList.add('hidden');
                    resendSection.classList.remove('hidden');
                } else {
                    const minutes = Math.floor(timeLeft / 60);
                    let seconds = timeLeft % 60;
                    seconds = seconds < 10 ? '0' + seconds : seconds;
                    countdownEl.innerText = `0${minutes}:${seconds}`;
                    timeLeft--;
                }
            }, 1000);
        }
    </script>
</body>

</html>