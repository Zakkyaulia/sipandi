<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
</head>

<body
    class="bg-gradient-to-br from-sipandi-green-50 to-sipandi-green-100 min-h-screen flex items-center justify-center p-4">
    <div class="card max-w-md w-full">
        <!-- Logo Section -->
        <div class="text-center mb-8">
            <img src="/images/logo-biro-organisasi.jpg" alt="Logo Biro Organisasi"
                class="w-32 h-32 mx-auto mb-4 rounded-full shadow-md object-cover">
            <h1 class="text-3xl font-bold text-sipandi-green-700 mb-2">SIPANDI</h1>
            <p class="text-gray-600">Registrasi Akun Baru</p>
            <p class="text-sm text-gray-500">Sistem Pengelolaan barang dan validasi</p>
            <p class="text-sm text-gray-500">(JP ASN Internal Biro Organisasi) - Setda Prov. Sumbar</p>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                <span class="block sm:inline">
                    <%= error %>
                </span>
            </div>
            <% } %>

                <!-- Success Message -->
                <% if (success) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4"
                        role="alert">
                        <span class="block sm:inline">
                            <%= success %>
                        </span>
                    </div>
                    <% } %>

                        <!-- Register Form -->
                        <form action="/register" method="POST" class="space-y-4">
                            <div>
                                <label for="username"
                                    class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                                <input type="text" id="username" name="username" required class="input-field"
                                    placeholder="Masukkan username" autocomplete="username" minlength="4">
                                <p class="text-xs text-gray-500 mt-1">Minimal 4 karakter</p>
                            </div>

                            <div>
                                <label for="nip" class="block text-sm font-medium text-gray-700 mb-2">NIP</label>
                                <input type="text" id="nip" name="nip" required class="input-field"
                                    placeholder="Masukkan NIP" pattern="[0-9]{18}" title="NIP harus 18 digit angka"
                                    maxlength="18">
                                <p class="text-xs text-gray-500 mt-1">Format: 18 digit angka</p>
                            </div>

                            <div>
                                <label for="password"
                                    class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                                <input type="password" id="password" name="password" required class="input-field"
                                    placeholder="Masukkan password" autocomplete="new-password" minlength="6">
                                <p class="text-xs text-gray-500 mt-1">Minimal 6 karakter</p>
                            </div>

                            <div>
                                <label for="confirmPassword"
                                    class="block text-sm font-medium text-gray-700 mb-2">Konfirmasi Password</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" required
                                    class="input-field" placeholder="Masukkan ulang password"
                                    autocomplete="new-password">
                            </div>

                            <button type="submit" class="btn-primary w-full">
                                Daftar
                            </button>
                        </form>

                        <!-- Link to Login -->
                        <div class="mt-6 pt-6 border-t border-gray-200 text-center">
                            <p class="text-sm text-gray-600">
                                Sudah punya akun?
                                <a href="/login"
                                    class="text-sipandi-green-600 hover:text-sipandi-green-700 font-semibold">
                                    Login di sini
                                </a>
                            </p>
                        </div>
    </div>

    <!-- Client-side validation script -->
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Password dan Konfirmasi Password tidak sama!');
                return false;
            }

            const nip = document.getElementById('nip').value;
            if (!/^\d{18}$/.test(nip)) {
                e.preventDefault();
                alert('NIP harus 18 digit angka!');
                return false;
            }
        });

        // Auto-format NIP (only allow numbers)
        document.getElementById('nip').addEventListener('input', function (e) {
            this.value = this.value.replace(/\D/g, '');
        });
    </script>
</body>

</html>