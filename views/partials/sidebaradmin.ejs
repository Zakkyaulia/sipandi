<aside
    class="bg-sipandi-green-800 text-white w-64 min-h-screen flex flex-col shadow-xl transition-all duration-300 hidden md:flex">
    <div class="p-6 flex items-center space-x-3 border-b border-sipandi-green-700">
        <img src="/images/logo-biro-organisasi.jpg" alt="Logo" class="w-10 h-10 rounded-full border-2 border-white">
        <div>
            <h1 class="text-xl font-bold tracking-wider">SIPANDI</h1>
            <p class="text-xs text-sipandi-green-200">Biro Organisasi</p>
        </div>
    </div>

    <nav class="flex-1 py-6 overflow-y-auto">
        <ul class="space-y-2 px-4">

            <li>
                <% 
                    let dashboardHref = "/admin/dashboard"; // Default Admin Utama
                    if (user.role === 'admin_atk') dashboardHref = "/admin/pengajuan";
                    if (user.role === 'admin_validasi_jp') dashboardHref = "/admin/jp";
                %>
                <a href="<%= dashboardHref %>"
                    class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= (page === 'dashboard' || page === 'pengajuan' || page === 'jp') ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z">
                        </path>
                    </svg>
                    <span>Dashboard</span>
                </a>
            </li>

            <% if (user.role === 'admin' || user.role === 'admin_atk') { %>
                <li>
                    <a href="/admin/inventory"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                       <%= page === 'inventory' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m-8-4v10l8 4M9 7l8 4"></path>
                        </svg>
                        <span>Manajemen Barang</span>
                    </a>
                </li>

                <% if (user.role === 'admin') { %>
                <li>
                    <a href="/admin/pengajuan"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                       <%= page === 'pengajuan' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01">
                            </path>
                        </svg>
                        <span>Kelola Pengajuan</span>
                    </a>
                </li>
                <% } %>
            <% } %>

            <% if (user.role === 'admin' || user.role === 'admin_validasi_jp') { %>
                <% if (user.role === 'admin') { %>
                <li>
                    <a href="/admin/jp"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                       <%= page === 'jp' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                            </path>
                        </svg>
                        <span>Kelola JP</span>
                    </a>
                </li>
                <% } %>
            <% } %>

            <% if (user.role === 'admin') { %>
                <li>
                    <a href="/admin/users"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                        <%= page === 'users' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z">
                            </path>
                        </svg>
                        <span>Manajemen Pengguna</span>
                    </a>
                </li>
            <% } %>

            <li>
                <% 
                    // LOGIKA BARU UNTUK LINK LAPORAN
                    let laporanLink = '/admin/laporan';
                    if(user.role === 'admin_validasi_jp') {
                        laporanLink += '?tab=jp';
                    } else if (user.role === 'admin_atk') {
                        laporanLink += '?tab=pengajuan';
                    }
                %>
                <a href="<%= laporanLink %>"
                    class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                    <%= page === 'laporan' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <span>Laporan Rekapitulasi</span>
                </a>
            </li>

        </ul>
    </nav>

    <div class="p-4 border-t border-sipandi-green-700">
        <a href="#" onclick="confirmLogout(event)"
            class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-200 hover:bg-red-600 hover:text-white transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                </path>
            </svg>
            <span>Logout</span>
        </a>
    </div>
</aside>

<!-- SweetAlert2 for Logout (Ensure it's loaded if not already) -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmLogout(e) {
        e.preventDefault();
        Swal.fire({
            title: 'Yakin ingin logout?',
            text: "Anda harus login kembali untuk mengakses sistem",
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Ya, Logout',
            cancelButtonText: 'Batal',
            buttonsStyling: false,
            customClass: {
                popup: 'rounded-xl font-sans',
                title: 'text-lg font-bold text-gray-800',
                htmlContainer: 'text-gray-600',
                confirmButton: 'bg-red-600 hover:bg-red-700 text-white px-5 py-2.5 rounded-lg font-medium transition-colors mx-1 focus:ring-2 focus:ring-red-500 focus:ring-offset-1',
                cancelButton: 'bg-gray-200 hover:bg-gray-300 text-gray-800 px-5 py-2.5 rounded-lg font-medium transition-colors mx-1 focus:ring-2 focus:ring-gray-300 focus:ring-offset-1'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Logout Berhasil!',
                    text: 'Mengeluarkan anda dari sistem...',
                    icon: 'success',
                    timer: 1500,
                    showConfirmButton: false,
                    buttonsStyling: false,
                    customClass: {
                        popup: 'rounded-2xl font-sans'
                    }
                }).then(() => {
                    window.location.href = '/logout';
                });
            }
        });
    }
</script>