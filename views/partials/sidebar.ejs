<aside class="bg-sipandi-green-800 text-white w-64 min-h-screen flex flex-col shadow-xl transition-all duration-300 hidden md:flex">
    <div class="p-6 flex items-center space-x-3 border-b border-sipandi-green-700">
        <img src="/images/logo-biro-organisasi.jpg" alt="Logo" class="w-10 h-10 rounded-full border-2 border-white">
        <div>
            <h1 class="text-xl font-bold tracking-wider">SIPANDI</h1>
            <p class="text-xs text-sipandi-green-200">Biro Organisasi</p>
        </div>
    </div>

    <nav class="flex-1 py-6 overflow-y-auto">
        <ul class="space-y-2 px-4">
            
            <li>
                <a href="<%= user.role === 'admin' ? '/admin/dashboard' : '/user/dashboard' %>" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'dashboard' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                    </svg>
                    <span>Dashboard</span>
                </a>
            </li>

            <% if (user.role === 'asn' || user.role === 'user') { %>
            <li>
                <a href="/profile" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'profile' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span>Profile</span>
                </a>
            </li>

            <li>
                <a href="/submit-jp" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'submit-jp' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <span>Submit JP</span>
                </a>
            </li>

            <li>
                <a href="/riwayat-submit" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'riwayat-submit' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Riwayat Submit</span>
                </a>
            </li>

            <li>
                <a href="/pengajuan" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'pengajuan' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <span>Pengajuan</span>
                </a>
            </li>

            <li>
                <a href="/riwayat-pengajuan" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'riwayat-pengajuan' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                    <span>Riwayat Pengajuan</span>
                </a>
            </li>
            <% } %>

            <% if (user.role === 'admin') { %>
            <li class="pt-4 border-t border-sipandi-green-700 mt-4">
                <span class="px-4 text-xs font-semibold text-sipandi-green-300 uppercase tracking-wider">Admin Menu</span>
            </li>

            <li>
                <a href="/admin/barang" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'barang' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    <span>Manajemen Barang</span>
                </a>
            </li>

            <li>
                <a href="/admin/riwayat-pengajuan" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'riwayat-pengajuan-admin' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                    <span>Riwayat Pengajuan</span>
                </a>
            </li>

            <li>
                <a href="/admin/riwayat-jp" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'riwayat-jp' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Riwayat JP</span>
                </a>
            </li>

            <li>
                <a href="/admin/users" 
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors duration-200 
                   <%= page === 'users' ? 'bg-sipandi-green-700 text-white shadow-md' : 'text-sipandi-green-100 hover:bg-sipandi-green-700 hover:text-white' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                    <span>Manajemen Pengguna</span>
                </a>
            </li>
            <% } %>

        </ul>
    </nav>

    <div class="p-4 border-t border-sipandi-green-700">
        <a href="/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg text-red-200 hover:bg-red-600 hover:text-white transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Logout</span>
        </a>
    </div>
</aside>