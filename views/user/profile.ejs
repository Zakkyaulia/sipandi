<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Saya - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-50 font-sans antialiased text-gray-800">
    <div class="flex h-screen overflow-hidden">

        <%- include('../partials/sidebar', { page: 'profile' }) %>

            <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">

                <%- include('../partials/header', { pageTitle: 'Profil Saya' }) %>

                    <main class="w-full flex-grow p-6">
                        <div class="max-w-5xl mx-auto space-y-6">

                            <!-- 1. NEW COMPACT IDENTITY HEADER (Replaces Left Profile Card) -->
                            <div class="bg-white rounded-3xl shadow-sm border border-gray-100 p-6 md:p-8">
                                <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                                    <!-- Identity Info -->
                                    <div class="flex flex-col md:flex-row items-center gap-6 text-center md:text-left">
                                        <div class="relative">
                                            <div
                                                class="w-24 h-24 rounded-full bg-[#EBF7E3] flex items-center justify-center text-4xl font-bold text-sipandi-green-700 shadow-sm border-4 border-white ring-1 ring-gray-100">
                                                <%= (user.nama || user.name || 'U' ).charAt(0).toUpperCase() %>
                                            </div>
                                            <!-- Status Dot -->
                                            <div class="absolute bottom-1 right-1 w-6 h-6 bg-green-500 border-4 border-white rounded-full"
                                                title="Status: Aktif"></div>
                                        </div>

                                        <div>
                                            <h2 class="text-2xl font-bold text-gray-800 mb-2">
                                                <%= user.nama || user.name %>
                                            </h2>
                                            <div
                                                class="flex flex-wrap items-center justify-center md:justify-start gap-3">
                                                <span
                                                    class="px-4 py-1.5 rounded-full bg-sipandi-green-50 text-sipandi-green-700 font-bold text-xs uppercase tracking-wider border border-sipandi-green-100">
                                                    <%= user.role %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Button (Top Right) -->
                                    <button onclick="openEditProfileModal()"
                                        class="flex items-center gap-2 px-6 py-3 rounded-xl bg-gray-900 text-white font-bold hover:bg-gray-800 transition-all shadow-md hover:shadow-lg hover:-translate-y-0.5 group">
                                        <svg class="w-4 h-4 text-gray-300 group-hover:text-white transition-colors"
                                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                            </path>
                                        </svg>
                                        Edit Profil
                                    </button>
                                </div>
                            </div>

                            <!-- 2. DETAIL INFORMATION CARD (Restored to previous style) -->
                            <div class="bg-white rounded-3xl shadow-sm border border-gray-100 p-8">
                                <div class="flex items-center gap-3 mb-6 border-b border-gray-100 pb-4">
                                    <div class="p-2 bg-[#EBF7E3] rounded-lg text-green-700">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2">
                                            </path>
                                        </svg>
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-800">Detail Pegawai</h3>
                                </div>

                                <div class="flex flex-col space-y-6">
                                    <!-- NIP -->
                                    <div class="group w-full">
                                        <label
                                            class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block">Nomor
                                            Induk Pegawai (NIP)</label>
                                        <div
                                            class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl border border-transparent group-hover:border-green-100 group-hover:bg-[#F5FBF0] transition-colors">
                                            <span class="text-gray-500">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                                </svg>
                                            </span>
                                            <span class="font-semibold text-gray-800 text-lg tracking-wide font-mono">
                                                <%= user.nip || user.username %>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Unit Kerja -->
                                    <div class="group w-full">
                                        <label
                                            class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block">Unit
                                            Kerja</label>
                                        <div
                                            class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl border border-transparent group-hover:border-green-100 group-hover:bg-[#F5FBF0] transition-colors">
                                            <span class="text-gray-500">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4">
                                                    </path>
                                                </svg>
                                            </span>
                                            <span class="font-semibold text-gray-800 text-lg">
                                                <%= user.unit_kerja || 'Belum Diatur' %>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Jabatan -->
                                    <div class="group">
                                        <label
                                            class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block">Jabatan</label>
                                        <div
                                            class="flex items-center gap-3 p-3 bg-gray-50 rounded-xl border border-transparent group-hover:border-green-100 group-hover:bg-[#F5FBF0] transition-colors">
                                            <span class="text-gray-500">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                            </span>
                                            <span class="font-semibold text-gray-800 text-lg uppercase">
                                                <%= user.role %>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="group">
                                        <label
                                            class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2 block">Email
                                            Instansi</label>
                                        <div
                                            class="flex items-center gap-3 p-3 bg-gray-50 rounded-xl border border-transparent group-hover:border-green-100 group-hover:bg-[#F5FBF0] transition-colors">
                                            <span class="text-gray-500">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                            </span>
                                            <span class="font-semibold text-gray-800 text-lg italic">
                                                <%= user.email || 'Belum Diatur' %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- 3. SECURITY CARD (Restored to previous style) -->
                            <div
                                class="bg-white rounded-3xl shadow-sm border border-gray-100 p-8 flex flex-col md:flex-row items-center justify-between gap-6">
                                <div class="flex items-center gap-5">
                                    <div class="p-4 bg-orange-50 text-orange-500 rounded-2xl">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                                            </path>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="text-lg font-bold text-gray-800">Keamanan Akun</h4>
                                        <p class="text-gray-500 text-sm mt-1">Ganti password secara berkala untuk
                                            menjaga keamanan akun Anda.</p>
                                    </div>
                                </div>
                                <button onclick="openChangePasswordModal()"
                                    class="whitespace-nowrap px-6 py-3 bg-white border-2 border-orange-100 text-orange-600 font-bold rounded-xl hover:bg-orange-50 hover:border-orange-200 transition-colors flex items-center justify-center gap-2">
                                    Ganti Password
                                </button>
                            </div>

                        </div>
                    </main>
            </div>
    </div>

    <!-- EDIT PROFILE MODAL -->
    <div id="editProfileModal"
        class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center opacity-0 transition-opacity duration-300">
        <div
            class="bg-white rounded-2xl p-8 w-full max-w-md transform scale-95 opacity-0 transition-all duration-300 relative">
            <button onclick="closeEditProfileModal()"
                class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition p-1">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <h3 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Edit Profil</h3>

            <form id="editProfileForm" onsubmit="handleProfileUpdate(event)">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Nama Lengkap</label>
                        <input type="text" id="editName" name="name" value="<%= user.nama || user.name %>" required
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">NIP</label>
                        <input type="text" inputmode="numeric" maxlength="18" oninput="validateNIP(this)" id="editNIP"
                            name="nip" value="<%= user.nip || user.username %>" required
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                        <p id="nipWarning" class="text-xs text-red-500 mt-1 hidden font-bold flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            NIP harus berjumlah 18 digit angka
                        </p>
                    </div>

                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Unit Kerja</label>
                        <div class="relative">
                            <select id="editUnitKerja" name="unit_kerja"
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition bg-white appearance-none cursor-pointer">
                                <option value="" <%=!user.unit_kerja ? 'selected' : '' %>>- Pilih Unit Kerja -</option>
                                <option value="Tata Laksana" <%=user.unit_kerja==='Tata Laksana' ? 'selected' : '' %>
                                    >Tata Laksana</option>
                                <option value="Kelembagaan" <%=user.unit_kerja==='Kelembagaan' ? 'selected' : '' %>
                                    >Kelembagaan</option>
                                <option value="RBAK" <%=user.unit_kerja==='RBAK' ? 'selected' : '' %>>Reformasi
                                    Birokrasi dan Akuntabilitas Kinerja (RBAK)</option>
                            </select>
                            <div
                                class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-gray-500">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Email</label>
                        <input type="email" id="editEmail" name="email" value="<%= user.email || '' %>"
                            placeholder="Contoh: nama@domain.com"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                    </div>
                </div>

                <div class="mt-8 flex justify-end">
                    <button type="submit"
                        class="bg-gradient-to-r from-sipandi-green-600 to-sipandi-green-700 text-white px-6 py-3 rounded-xl font-bold shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition transform w-full md:w-auto">
                        Simpan Perubahan
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- CHANGE PASSWORD MODAL -->
    <div id="changePasswordModal"
        class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center opacity-0 transition-opacity duration-300">
        <div
            class="bg-white rounded-2xl p-8 w-full max-w-md transform scale-95 opacity-0 transition-all duration-300 relative">
            <button onclick="closeChangePasswordModal()"
                class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition p-1">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <h3 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Ganti Password</h3>

            <form id="changePasswordForm" onsubmit="handleChangePassword(event)">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Password Saat Ini</label>
                        <input type="password" id="currentPassword" name="currentPassword" required
                            placeholder="Masukkan password lama"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                        <p id="currentPasswordError"
                            class="text-xs text-red-500 mt-1 hidden font-bold flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Password salah!
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Password Baru</label>
                        <input type="password" id="newPassword" name="newPassword" required
                            placeholder="Masukkan password baru"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                        <p id="samePasswordError" class="text-xs text-red-500 mt-1 hidden font-bold flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Password tidak boleh sama dengan sebelumnya
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Konfirmasi Password Baru</label>
                        <input type="password" id="confirmNewPassword" name="confirmNewPassword" required
                            placeholder="Ulangi password baru"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-sipandi-green-500 focus:ring-2 focus:ring-sipandi-green-200 outline-none transition">
                        <p id="passwordMatchError" class="text-xs text-red-500 mt-1 hidden font-bold flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Password tidak cocok!
                        </p>
                    </div>
                </div>

                <div class="mt-8 flex justify-end">
                    <button type="submit"
                        class="bg-gradient-to-r from-sipandi-green-600 to-sipandi-green-700 text-white px-6 py-3 rounded-xl font-bold shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition transform w-full md:w-auto">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- CSS FOR ANIMATIONS -->
    <style>
        /* HIDE PASSWORD REVEAL EYE */
        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear {
            display: none;
        }

        input[type="password"]::-webkit-password-reveal-button {
            display: none;
            -webkit-appearance: none;
        }
    </style>

    <!-- SCRIPT -->
    <script>
        // Modal Logic
        function openEditProfileModal() {
            const modal = document.getElementById('editProfileModal');
            const content = modal.querySelector('div');

            modal.classList.remove('hidden');
            // Trigger reflow
            void modal.offsetWidth;

            modal.classList.remove('opacity-0');
            content.classList.remove('scale-95', 'opacity-0');
            content.classList.add('scale-100', 'opacity-100');

            // Re-validate on open to ensure clean state
            const nipInput = document.getElementById('editNIP');
            validateNIP(nipInput);
        }

        function closeEditProfileModal() {
            const modal = document.getElementById('editProfileModal');
            const content = modal.querySelector('div');

            modal.classList.add('opacity-0');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        // Change Password Modal Logic
        function openChangePasswordModal() {
            const modal = document.getElementById('changePasswordModal');
            const content = modal.querySelector('div');

            // Reset form and errors
            document.getElementById('changePasswordForm').reset();
            document.getElementById('currentPasswordError').classList.add('hidden');
            document.getElementById('passwordMatchError').classList.add('hidden');
            document.getElementById('samePasswordError').classList.add('hidden');

            modal.classList.remove('hidden');
            void modal.offsetWidth;

            modal.classList.remove('opacity-0');
            content.classList.remove('scale-95', 'opacity-0');
            content.classList.add('scale-100', 'opacity-100');
        }

        function closeChangePasswordModal() {
            const modal = document.getElementById('changePasswordModal');
            const content = modal.querySelector('div');

            modal.classList.add('opacity-0');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        // Validate NIP Input
        function validateNIP(input) {
            // Remove non-digits
            input.value = input.value.replace(/\D/g, '');

            // Hide warning when user corrects input
            const warningEl = document.getElementById('nipWarning');
            warningEl.classList.add('hidden');
        }

        // Handle Change Password Submit
        async function handleChangePassword(e) {
            e.preventDefault();

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmNewPassword = document.getElementById('confirmNewPassword').value;

            const currentPassError = document.getElementById('currentPasswordError');
            const matchError = document.getElementById('passwordMatchError');
            const samePassError = document.getElementById('samePasswordError');

            // Reset errors
            currentPassError.classList.add('hidden');
            matchError.classList.add('hidden');
            samePassError.classList.add('hidden');

            // Client-side Validation: Match
            if (newPassword !== confirmNewPassword) {
                matchError.classList.remove('hidden');
                return;
            }

            // Client-side Validation: Same as Current
            if (currentPassword === newPassword) {
                samePassError.classList.remove('hidden');
                return;
            }

            try {
                const res = await fetch('/user/profile/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword })
                });

                const result = await res.json();

                if (result.success) {
                    closeChangePasswordModal();
                    showStatusModal('success', 'Update Berhasil!', 'Password telah di update!', false); // false = no reload needed
                } else {
                    if (result.message === 'incorrect_current_password') {
                        currentPassError.classList.remove('hidden');
                    } else {
                        showStatusModal('warning', 'Gagal', result.message || 'Terjadi kesalahan.', false);
                    }
                }
            } catch (error) {
                console.error(error);
                showStatusModal('warning', 'Error', 'Gagal menghubungi server.', false);
            }
        }

        // Handle Form Submit
        async function handleProfileUpdate(e) {
            e.preventDefault();

            const nameInput = document.getElementById('editName');
            const nipInput = document.getElementById('editNIP');
            const unitKerjaInput = document.getElementById('editUnitKerja');
            const emailInput = document.getElementById('editEmail');
            const warningEl = document.getElementById('nipWarning');

            // VALIDATION: Check NIP Length on Submit
            if (nipInput.value.length !== 18) {
                warningEl.classList.remove('hidden');
                return; // Stop submission
            }

            // VALIDATION: Check for changes
            // Note: defaultValue only works for inputs present on page load. 
            // Better to compare with initial EJS values if available, or just send it.
            // For simplicity in this context, we will skip strict "no change" check to ensure updates go through, 
            // or we add the new fields to the check.

            try {
                const res = await fetch('/user/profile/update', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        name: nameInput.value,
                        nip: nipInput.value,
                        unit_kerja: unitKerjaInput.value,
                        email: emailInput.value
                    })
                });

                const result = await res.json();

                if (result.success) {
                    closeEditProfileModal();
                    // Pass true to reload
                    showStatusModal('success', 'Update Berhasil!', 'Data profil Anda telah berhasil diperbarui.', true);
                } else {
                    showStatusModal('warning', 'Gagal', result.message || 'Terjadi kesalahan.', false);
                }
            } catch (error) {
                console.error(error);
                showStatusModal('warning', 'Error', 'Gagal menghubungi server.', false);
            }
        }

        // Styled SweetAlert Mixin for General Messages
        const StyledSwal = Swal.mixin({
            customClass: {
                confirmButton: 'bg-green-600 hover:bg-green-700 text-white font-medium py-2.5 px-6 rounded-lg mx-1 transition-colors focus:ring-2 focus:ring-green-500 focus:ring-offset-1',
                cancelButton: 'bg-gray-500 hover:bg-gray-600 text-white font-medium py-2.5 px-6 rounded-lg mx-1 transition-colors focus:ring-2 focus:ring-gray-500 focus:ring-offset-1',
                popup: 'rounded-xl font-sans',
                title: 'text-lg font-bold text-gray-800',
                htmlContainer: 'text-gray-600'
            },
            buttonsStyling: false
        });

        // STATUS MODAL (With Animated Icon and Conditional Reload)
        function showStatusModal(type, title, message, shouldReload = false) {
            StyledSwal.fire({
                icon: type,
                title: title,
                text: message,
                confirmButtonText: 'Oke'
            }).then(() => {
                if (shouldReload) {
                    window.location.reload();
                }
            });
        }

        // Removed closeStatusModalAndRefresh as it's handled by Swal promise
    </script>
