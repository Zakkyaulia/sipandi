<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katalog Barang - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 font-sans antialiased">
    <div class="flex h-screen overflow-hidden">

        <%- include('../partials/sidebar', { page: 'katalog' }) %>

            <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">

                <%- include('../partials/header', { pageTitle: 'Katalog Barang' }) %>

                    <main class="w-full flex-grow p-6">

                        <!-- Search Section -->
                        <div class="mb-6">
                            <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                                <div class="flex flex-row items-center gap-4">
                                    <div class="flex-1 relative">
                                        <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
                                                </path>
                                            </svg>
                                        </span>
                                        <input type="text" id="searchInput" placeholder="Cari nama barang..." class="w-full pl-10 pr-4 py-3 text-sm border border-gray-300 rounded-lg
                                           focus:outline-none focus:ring-2 focus:ring-sipandi-green-500 transition-all"
                                            onkeyup="searchBarang()">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Cart Summary (Fixed at top when items added) -->
                        <div id="cartSummary"
                            class="hidden mb-6 bg-sipandi-green-600 text-white rounded-xl shadow-lg p-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z">
                                        </path>
                                    </svg>
                                    <div>
                                        <p class="font-bold"><span id="cartCount">0</span> Barang Dipilih</p>
                                        <p class="text-sm opacity-90">Siap untuk diajukan</p>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button onclick="viewCart()"
                                        class="bg-white text-sipandi-green-600 px-4 py-2 rounded-lg font-bold text-sm hover:bg-gray-100 transition-all">
                                        Lihat Keranjang
                                    </button>
                                    <button onclick="clearCart()"
                                        class="bg-red-500 text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-red-600 transition-all">
                                        Kosongkan
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Katalog Grid -->
                        <div id="katalogGrid"
                            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                            <!-- Items will be populated by JavaScript -->
                        </div>

                    </main>

                    <%- include('../partials/footer') %>
            </div>
    </div>

    <!-- Modal Ajukan Barang -->
    <div id="ajukanModal"
        class="hidden opacity-0 fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4 transition-all duration-300">
        <div
            class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl relative transform scale-95 opacity-0 translate-y-4 transition-all duration-300">

            <button onclick="closeAjukanModal()"
                class="absolute top-5 right-5 text-gray-500 hover:text-gray-800 transition-colors p-1 rounded-full hover:bg-gray-100">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <h3 class="text-2xl font-extrabold text-gray-800 mb-6">Ajukan Barang</h3>

            <div class="space-y-4 mb-6">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase mb-1">Nama Barang</p>
                    <p id="modalNamaBarang" class="text-lg font-bold text-gray-800"></p>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Stok Tersedia</p>
                        <p id="modalStok" class="text-lg font-bold text-gray-800"></p>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Satuan</p>
                        <p id="modalSatuan" class="text-lg font-bold text-gray-800"></p>
                    </div>
                </div>

                <div>
                    <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Jumlah Diminta
                        <span class="text-red-500">*</span></label>
                    <input type="number" id="modalJumlah" min="1" value="1"
                        class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none">
                </div>
            </div>

            <div class="flex gap-3">
                <button onclick="closeAjukanModal()"
                    class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-3 rounded-xl font-bold text-sm transition-all">
                    Batal
                </button>
                <button onclick="addToCart()"
                    class="flex-1 bg-gradient-to-r from-sipandi-green-600 to-emerald-600 hover:from-sipandi-green-700 hover:to-emerald-700 text-white py-3 rounded-xl font-bold text-sm shadow-lg transition-all">
                    Tambah ke Keranjang
                </button>
            </div>
        </div>
    </div>

    <!-- Modal Keranjang -->
    <div id="cartModal"
        class="hidden opacity-0 fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4 transition-all duration-300">
        <div
            class="bg-white rounded-2xl p-8 max-w-3xl w-full shadow-2xl relative transform scale-95 opacity-0 translate-y-4 transition-all duration-300 max-h-[90vh] overflow-y-auto">

            <button onclick="closeCartModal()"
                class="absolute top-5 right-5 text-gray-500 hover:text-gray-800 transition-colors p-1 rounded-full hover:bg-gray-100">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <h3 class="text-2xl font-extrabold text-gray-800 mb-6">Keranjang Pengajuan</h3>

            <div id="cartItems" class="space-y-3 mb-6">
                <!-- Cart items will be populated here -->
            </div>

            <div class="mb-6">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Catatan Pengajuan</label>
                <textarea id="catatanPengajuan" rows="3" placeholder="Tambahkan catatan untuk admin (opsional)..."
                    class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none resize-none"></textarea>
            </div>

            <div class="flex gap-3">
                <button onclick="closeCartModal()"
                    class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-3 rounded-xl font-bold text-sm transition-all">
                    Tutup
                </button>
                <button onclick="submitPengajuan()"
                    class="flex-1 bg-gradient-to-r from-sipandi-green-600 to-emerald-600 hover:from-sipandi-green-700 hover:to-emerald-700 text-white py-3 rounded-xl font-bold text-sm shadow-lg transition-all">
                    Ajukan Sekarang
                </button>
            </div>
        </div>
    </div>

    <script src="/js/katalog.js"></script>
</body>

</html>