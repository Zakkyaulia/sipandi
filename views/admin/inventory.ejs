<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Barang - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 font-sans antialiased">
    <div class="flex h-screen overflow-hidden">

        <%- include('../partials/sidebaradmin', { page: 'inventory' }) %>

            <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">

                <%- include('../partials/header', { pageTitle: 'Manajemen Barang' }) %>

                    <main class="w-full flex-grow p-6">

                        <!-- Filter & Search Section -->
                        <div class="mb-8">
                            <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                                <div class="flex flex-row items-center gap-4">

                                    <!-- Search Bar -->
                                    <div class="flex-1 relative">
                                        <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
                                                </path>
                                            </svg>
                                        </span>
                                        <input type="text" id="searchInput" placeholder="Cari nama barang..." class="w-full pl-10 pr-4 py-3 text-sm border border-gray-300 rounded-lg
                                           focus:outline-none focus:ring-2 focus:ring-sipandi-green-500 transition-all"
                                            onkeyup="searchBarang()">
                                    </div>

                                    <!-- Status Filter Dropdown -->
                                    <div class="relative">
                                        <select id="statusFilter" onchange="searchBarang()"
                                            class="cursor-pointer px-4 py-3 text-sm border border-gray-300 rounded-lg
                                           focus:outline-none focus:ring-2 focus:ring-sipandi-green-500 bg-white appearance-none pr-10">
                                            <option value="all">Semua Status</option>
                                            <option value="tersedia">Tersedia</option>
                                            <option value="stok_sedikit">Stok Sedikit</option>
                                            <option value="perbarui_stok">Perbarui Stok</option>
                                        </select>
                                        <div
                                            class="absolute right-3 top-1/2 transform -translate-y-1/2 pointer-events-none text-gray-400">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M19 9l-7 7-7-7">
                                                </path>
                                            </svg>
                                        </div>
                                    </div>

                                    <!-- Tambah Barang Button -->
                                    <button onclick="openAddModal()" class="bg-gradient-to-r from-sipandi-green-600 to-emerald-600 hover:from-sipandi-green-700 hover:to-emerald-700 text-white px-6 py-3 rounded-lg font-bold text-sm shadow-lg
                                       flex items-center justify-center gap-2 transition-all whitespace-nowrap">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 4v16m8-8H4">
                                            </path>
                                        </svg>
                                        Tambah Barang
                                    </button>

                                </div>
                            </div>
                        </div>

                        <!-- Inventory Table -->
                        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-sipandi-green-700 text-white">
                                        <tr>
                                            <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">
                                                Nama Barang
                                            </th>
                                            <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">
                                                Stok
                                            </th>
                                            <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">
                                                Satuan
                                            </th>
                                            <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">
                                                Status
                                            </th>
                                            <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">
                                                Update Terakhir
                                            </th>
                                            <th
                                                class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider">
                                                Aksi
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="barangTableBody" class="bg-white divide-y divide-gray-200">
                                        <!-- Data will be populated by JavaScript -->
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </main>

                    <%- include('../partials/footer') %>
            </div>
    </div>

    <!-- Modal Form (Add/Edit) -->
    <div id="formModal"
        class="hidden opacity-0 fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4 transition-all duration-300 ease-out">
        <div
            class="bg-white rounded-2xl p-8 max-w-2xl w-full shadow-2xl relative transform scale-95 opacity-0 translate-y-4 transition-all duration-300 ease-out border border-gray-100 max-h-[90vh] overflow-y-auto">

            <button onclick="closeModal()"
                class="absolute top-5 right-5 text-gray-500 hover:text-gray-800 transition-colors p-1 rounded-full hover:bg-gray-100">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <div class="mb-8">
                <h3 id="modalTitle" class="text-2xl font-extrabold text-gray-800 tracking-tight"></h3>
                <p class="text-sm text-gray-500 mt-1">Silakan lengkapi formulir di bawah ini.</p>
            </div>

            <form id="barangForm" onsubmit="handleSubmit(event)" class="space-y-5">
                <input type="hidden" id="editBarangId">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    <!-- Nama Barang -->
                    <div class="space-y-1.5 md:col-span-2">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Nama Barang
                            <span class="text-red-500">*</span></label>
                        <input type="text" id="formNamaBarang" required
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400">
                    </div>

                    <!-- Quantity -->
                    <div class="space-y-1.5">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Stok/Quantity
                            <span class="text-red-500">*</span></label>
                        <input type="number" id="formQuantity" required min="0"
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400">
                    </div>

                    <!-- Satuan -->
                    <div class="space-y-1.5">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Satuan</label>
                        <input type="text" id="formSatuan"
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400">
                    </div>


                    <div class="space-y-1.5">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Batas Perbarui Stok
                            <span class="text-red-500">*</span></label>
                        <input type="number" id="formThresholdHabis" required min="0"
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400">
                        <p class="text-xs text-gray-500 ml-1">Stok ≤ nilai ini = "Perbarui Stok"</p>
                    </div>

                    <!-- Threshold Stok Sedikit -->
                    <div class="space-y-1.5">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Batas Stok Sedikit
                            <span class="text-red-500">*</span></label>
                        <input type="number" id="formThresholdSedikit" required min="1"
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400">
                        <p class="text-xs text-gray-500 ml-1">Stok ≤ nilai ini = "Stok Sedikit"</p>
                    </div>

                    <!-- Keterangan -->
                    <div class="space-y-1.5 md:col-span-2">
                        <label class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1">Keterangan</label>
                        <textarea id="formKeterangan" rows="3"
                            class="w-full px-5 py-3 rounded-xl border border-gray-200 bg-gray-50 text-gray-800 text-sm focus:ring-2 focus:ring-sipandi-green-500 focus:bg-white focus:border-transparent transition-all outline-none placeholder-gray-400 resize-none"></textarea>
                    </div>
                </div>

                <div class="pt-6 flex justify-center">
                    <button type="submit"
                        class="w-auto px-10 bg-gradient-to-r from-sipandi-green-600 to-emerald-600 hover:from-sipandi-green-700 hover:to-emerald-700 text-white py-3.5 rounded-xl font-bold text-sm shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                        </svg>
                        SIMPAN
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Detail -->
    <div id="detailModal"
        class="hidden opacity-0 fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4 transition-all duration-300 ease-out">
        <div
            class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl relative transform scale-95 opacity-0 translate-y-4 transition-all duration-300 ease-out">

            <button onclick="closeDetailModal()"
                class="absolute top-4 right-4 text-gray-500 hover:text-gray-800 transition-colors p-1 rounded-full hover:bg-gray-100">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <h3 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Detail Barang</h3>

            <div class="space-y-4">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase mb-1">Nama Barang</p>
                    <p id="detailNamaBarang" class="text-lg font-bold text-gray-800"></p>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Stok</p>
                        <p id="detailQuantity" class="text-lg font-bold text-gray-800"></p>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Satuan</p>
                        <p id="detailSatuan" class="text-lg font-bold text-gray-800"></p>
                    </div>
                </div>



                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Batas Perbarui Stok</p>
                        <p id="detailThresholdHabis" class="text-lg font-bold text-gray-800"></p>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase mb-1">Batas Stok Sedikit</p>
                        <p id="detailThresholdSedikit" class="text-lg font-bold text-gray-800"></p>
                    </div>
                </div>

                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase mb-1">Keterangan</p>
                    <p id="detailKeterangan" class="text-sm text-gray-700"></p>
                </div>

                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase mb-1">Dibuat</p>
                    <p id="detailCreatedAt" class="text-sm text-gray-700"></p>
                </div>

                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase mb-1">Update Terakhir</p>
                    <p id="detailUpdatedAt" class="text-sm text-gray-700"></p>
                </div>
            </div>


        </div>
    </div>


    <script src="/js/inventoryManagement.js"></script>
</body>

</html>