<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laporan Rekapitulasi - SIPANDI</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
</head>
<body class="bg-gray-100 font-sans antialiased">
    <div class="flex h-screen overflow-hidden">
        <%- include('../partials/sidebaradmin', { page: 'laporan' }) %>
        <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">
            <%- include('../partials/header', { pageTitle: 'Laporan Rekapitulasi' }) %>
            
            <main class="w-full flex-grow p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <% if (user.role === 'admin' || user.role === 'admin_atk') { %>
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-sipandi-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m-8-4v10l8 4M9 7l8 4"></path></svg>
                            Rekap Pengajuan Barang
                        </h3>
                        <div id="rekapPengajuanContent" class="space-y-3">
                            <p class="text-gray-400 text-sm animate-pulse">Memuat data...</p>
                        </div>
                    </div>
                    <% } %>

                    <% if (user.role === 'admin' || user.role === 'admin_validasi_jp') { %>
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            Rekap Validasi JP ASN
                        </h3>
                        <div id="rekapJpContent" class="space-y-3">
                            <p class="text-gray-400 text-sm animate-pulse">Memuat data...</p>
                        </div>
                    </div>
                    <% } %>

                </div>
            </main>
            <%- include('../partials/footer') %>
        </div>
    </div>

    <script>
        async function loadRekap() {
            // Fetch Rekap Pengajuan
            if (document.getElementById('rekapPengajuanContent')) {
                const resP = await fetch('/admin/laporan/pengajuan');
                const dataP = await resP.json();
                if (dataP.success) {
                    const container = document.getElementById('rekapPengajuanContent');
                    container.innerHTML = dataP.data.map(item => `
                        <div class="flex justify-between items-center p-3 bg-gray-50 rounded-xl">
                            <span class="text-sm font-medium text-gray-600 capitalize">${item.status_pengajuan}</span>
                            <span class="px-3 py-1 bg-sipandi-green-100 text-sipandi-green-700 rounded-full font-bold">${item.total}</span>
                        </div>
                    `).join('') || '<p class="text-sm text-gray-500">Tidak ada data.</p>';
                }
            }

            // Fetch Rekap JP
            if (document.getElementById('rekapJpContent')) {
                const resJ = await fetch('/admin/laporan/jp');
                const dataJ = await resJ.json();
                if (dataJ.success) {
                    const container = document.getElementById('rekapJpContent');
                    container.innerHTML = dataJ.data.map(item => `
                        <div class="flex justify-between items-center p-3 bg-gray-50 rounded-xl">
                            <span class="text-sm font-medium text-gray-600 capitalize">${item.status}</span>
                            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-bold">${item.total}</span>
                        </div>
                    `).join('') || '<p class="text-sm text-gray-500">Tidak ada data.</p>';
                }
            }
        }
        window.onload = loadRekap;
    </script>
</body>
</html>