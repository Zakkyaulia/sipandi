    <script>
        // Global Data Store
        let masterData = {
            pengajuan: [],
            stok: [],
            jp: [],
            users: []
        };

        const MONTH_NAMES = ["Januari", "Februari", "Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember"];

        document.addEventListener('DOMContentLoaded', () => {
            const role = "<%= user.role %>";
            fetchAllData(role);
        });

        async function fetchAllData(role) {
            if(['admin', 'admin_atk'].includes(role)) {
                await loadPengajuan();
                await loadStok();
            }
            if(['admin', 'admin_validasi_jp'].includes(role)) {
                await loadJp();
            }
            if(role === 'admin') {
                await loadUsers();
            }
            applyFilters(); // Initial render
        }

        function switchTab(tabName) {
            document.querySelectorAll('.report-section').forEach(el => el.classList.add('hidden'));
            document.getElementById(`content-${tabName}`).classList.remove('hidden');

            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('bg-sipandi-green-600', 'text-white', 'shadow-md', 'shadow-green-100');
                btn.classList.add('text-gray-500', 'hover:bg-gray-50');
            });
            const active = document.getElementById(`tab-${tabName}`);
            active.classList.add('bg-sipandi-green-600', 'text-white', 'shadow-md', 'shadow-green-100');
            active.classList.remove('text-gray-500', 'hover:bg-gray-50');
        }

        // --- FETCH LOGIC ---
        async function loadPengajuan() {
            const res = await fetch('/admin/pengajuan/list?status=all&bidang=all');
            const data = await res.json();
            if(data.success) masterData.pengajuan = data.pengajuans;
        }

        async function loadStok() {
            const res = await fetch('/admin/inventory/list');
            const data = await res.json();
            if(data.success) masterData.stok = data.barangs;
        }

        async function loadJp() {
            const res = await fetch('/admin/jp/list?status=all&bidang=all&bulan=all&tahun=all');
            const data = await res.json();
            if(data.success) masterData.jp = data.submissions;
        }

        async function loadUsers() {
            const res = await fetch('/admin/users/list?role=all');
            const data = await res.json();
            if(data.success) masterData.users = data.users;
        }

        // --- FILTER ENGINE ---
        function applyFilters() {
            const selectedMonth = document.getElementById('filterBulan').value; // "all" or "0"-"11"
            const selectedYear = document.getElementById('filterTahun').value; // "all" or "2024"

            renderFilteredPengajuan(selectedMonth, selectedYear);
            renderFilteredJp(selectedMonth, selectedYear);
            renderStok(); // Stok stays realtime
            renderUsers(); // Users stay all
            
            updatePeriodText(selectedMonth, selectedYear);
        }

        function updatePeriodText(m, y) {
            const text = (m === 'all' && y === 'all') 
                ? "Semua Data" 
                : `${m !== 'all' ? MONTH_NAMES[m] : ''} ${y !== 'all' ? y : ''}`.trim();
            
            document.getElementById('period-text-pengajuan').innerText = `Periode: ${text}`;
            document.getElementById('period-text-jp').innerText = `Periode: ${text}`;
        }

        function renderFilteredPengajuan(m, y) {
            const tbody = document.getElementById('bodyPengajuan');
            const filtered = masterData.pengajuan.filter(p => {
                const date = new Date(p.tanggal_pengajuan);
                const matchM = m === 'all' || date.getMonth().toString() === m;
                const matchY = y === 'all' || date.getFullYear().toString() === y;
                return matchM && matchY;
            });

            document.getElementById('stat-total-pengajuan').innerText = filtered.length;
            document.getElementById('stat-acc-pengajuan').innerText = filtered.filter(p => p.status === 'disetujui').length;
            document.getElementById('stat-pending-pengajuan').innerText = filtered.filter(p => p.status === 'diajukan').length;

            tbody.innerHTML = filtered.map(p => {
                let statusClass = p.status === 'disetujui' ? "bg-green-100 text-green-700" : (p.status === 'ditolak' ? "bg-red-100 text-red-700" : "bg-yellow-100 text-yellow-700");
                return `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-8 py-4 font-medium text-gray-500">${new Date(p.tanggal_pengajuan).toLocaleDateString('id-ID')}</td>
                        <td class="px-8 py-4"><span class="font-bold text-gray-800">${p.user.nama}</span><br><span class="text-[10px] text-gray-400 font-mono">${p.user.nip}</span></td>
                        <td class="px-8 py-4 text-xs">
                            ${p.items.map(i => `<div class="mb-1">â€¢ ${i.nama_barang} <b>(${i.jumlah_diminta} ${i.satuan}${p.status === 'disetujui' ? ' âž” ' + i.jumlah_disetujui : ''})</b></div>`).join('')}
                        </td>
                        <td class="px-8 py-4"><span class="px-3 py-1 rounded-full text-[10px] font-black uppercase ${statusClass}">${p.status}</span></td>
                        <td class="px-8 py-4 text-xs italic text-gray-400">${p.catatan_admin || '-'}</td>
                    </tr>
                `;
            }).join('') || '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada data untuk periode ini</td></tr>';
        }

        function renderFilteredJp(m, y) {
            const tbody = document.getElementById('bodyJp');
            // Mapping month name to index for comparison if API returns strings like "Januari"
            const filtered = masterData.jp.filter(s => {
                const matchM = m === 'all' || s.bulan === MONTH_NAMES[parseInt(m)];
                const matchY = y === 'all' || s.tahun.toString() === y;
                return matchM && matchY;
            });

            tbody.innerHTML = filtered.map(s => {
                let jpStatusClass = s.status === 'diterima' || s.status === 'disetujui' ? "bg-green-100 text-green-700" : (s.status === 'ditolak' ? "bg-red-100 text-red-700" : "bg-yellow-100 text-yellow-700");
                return `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-8 py-4"><span class="font-bold text-gray-800">${s.user.nama}</span><br><span class="text-xs text-gray-400 font-mono">${s.user.nip}</span></td>
                        <td class="px-8 py-4 text-gray-600 font-medium">${s.nama_sertif}</td>
                        <td class="px-8 py-4 text-center font-black text-sipandi-green-600">${s.jumlah_jp}</td>
                        <td class="px-8 py-4 text-gray-500 text-xs">${s.bulan} ${s.tahun}</td>
                        <td class="px-8 py-4"><span class="px-3 py-1 rounded-full text-[10px] font-black uppercase ${jpStatusClass}">${s.status}</span></td>
                    </tr>
                `;
            }).join('') || '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada data untuk periode ini</td></tr>';
        }

        function renderStok() {
            const tbody = document.getElementById('bodyStok');
            const selectedMonth = document.getElementById('filterBulan').value;
            const selectedYear = document.getElementById('filterTahun').value;

            // Tambahkan logika filter berdasarkan tanggal update terakhir
            const filtered = masterData.stok.filter(b => {
                const date = new Date(b.updatedAt);
                const matchM = selectedMonth === 'all' || date.getMonth().toString() === selectedMonth;
                const matchY = selectedYear === 'all' || date.getFullYear().toString() === selectedYear;
                return matchM && matchY;
            });

            if (filtered.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada aktivitas pembaruan stok untuk periode ini</td></tr>';
                return;
            }

            tbody.innerHTML = filtered.map(b => {
                let stokClass = b.status_stok === 'Stok Sedikit' ? "bg-yellow-100 text-yellow-700" : (b.status_stok === 'Perbarui Stok' || b.quantity <= 0 ? "bg-red-100 text-red-700" : "bg-green-100 text-green-700");
                return `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-8 py-4 font-bold text-gray-800">${b.nama_barang}</td>
                        <td class="px-8 py-4 font-black ${b.quantity <= 5 ? 'text-red-600' : 'text-gray-900'}">${b.quantity}</td>
                        <td class="px-8 py-4 text-gray-500">${b.satuan}</td>
                        <td class="px-8 py-4"><span class="px-3 py-1 rounded-full text-[10px] font-black uppercase ${stokClass}">${b.status_stok}</span></td>
                        <td class="px-8 py-4 text-gray-400 text-xs">${new Date(b.updatedAt).toLocaleDateString('id-ID', {day: 'numeric', month: 'long', year: 'numeric'})}</td>
                    </tr>
                `;
            }).join('');
        }

        function renderUsers() {
            const tbody = document.getElementById('bodyUsers');
            tbody.innerHTML = masterData.users.map(u => `
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-8 py-4 font-bold text-gray-800">${u.name}</td>
                    <td class="px-8 py-4 font-mono text-gray-500 text-xs">${u.username}</td>
                    <td class="px-8 py-4 text-gray-600">${u.unit_kerja || '-'}</td>
                    <td class="px-8 py-4 break-all text-xs font-medium text-sipandi-green-600 max-w-[200px]">${u.email || '-'}</td>
                    <td class="px-8 py-4 uppercase text-[10px] font-black text-gray-400">${u.role}</td>
                </tr>
            `).join('');
        }

        // --- UTILS ---
        function exportToExcel(tableId, filename) {
            const table = document.getElementById(tableId);
            let csv = [];
            const rows = table.querySelectorAll("tr");
            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll("td, th");
                for (let j = 0; j < cols.length; j++) row.push('"' + cols[j].innerText.replace(/"/g, '""') + '"');
                csv.push(row.join(","));
            }
            const blob = new Blob([csv.join("\n")], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = `${filename}_${new Date().toLocaleDateString()}.csv`;
            link.click();
        }

        function printArea(areaId) {
            window.print();
        }
    </script>
