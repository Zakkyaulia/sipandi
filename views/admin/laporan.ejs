    <script>
        // Global Data Store
        let masterData = {
            pengajuan: [],
            stok: [],
            jp: [],
            users: []
        };

        let currentStatusFilter = 'all'; 
        let currentJpSort = 'desc'; // Default sort JP descending (terbesar)

        const MONTH_NAMES = ["Januari", "Februari", "Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember"];

        document.addEventListener('DOMContentLoaded', () => {
            const role = "<%= user.role %>";
            fetchAllData(role);

            // Cek URL Parameter 'tab' untuk switch otomatis
            const urlParams = new URLSearchParams(window.location.search);
            const tabParam = urlParams.get('tab');
            if(tabParam) {
                switchTab(tabParam);
            }
        });

        async function fetchAllData(role) {
            if(['admin', 'admin_atk'].includes(role)) {
                await loadPengajuan();
                await loadStok();
            }
            if(['admin', 'admin_validasi_jp'].includes(role)) {
                await loadJp();
            }
            if(role === 'admin') {
                await loadUsers();
            }
            applyFilters(); 
        }

        function switchTab(tabName) {
            document.querySelectorAll('.report-section').forEach(el => el.classList.add('hidden'));
            const targetContent = document.getElementById(`content-${tabName}`);
            if(targetContent) {
                targetContent.classList.remove('hidden');
            }

            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('bg-sipandi-green-600', 'text-white', 'shadow-md', 'shadow-green-100');
                btn.classList.add('text-gray-500', 'hover:bg-gray-50');
            });

            const activeBtn = document.getElementById(`tab-${tabName}`);
            if(activeBtn) {
                activeBtn.classList.add('bg-sipandi-green-600', 'text-white', 'shadow-md', 'shadow-green-100');
                activeBtn.classList.remove('text-gray-500', 'hover:bg-gray-50');
            }
        }

        // --- FILTER STATUS LOGIC ---
        function filterStatus(status) {
            currentStatusFilter = status;
            
            ['all', 'disetujui', 'diajukan', 'ditolak'].forEach(s => {
                const card = document.getElementById(`card-${s}`);
                if (s === status) {
                    card.classList.add('filter-card-active', 'bg-gray-50');
                } else {
                    card.classList.remove('filter-card-active', 'bg-gray-50');
                }
            });

            applyFilters();
        }

        // --- SORT JP LOGIC ---
        function sortJp(order) {
            currentJpSort = order;
            
            // Update UI Button Style
            const btnAsc = document.getElementById('btn-sort-asc');
            const btnDesc = document.getElementById('btn-sort-desc');
            
            if (order === 'asc') {
                btnAsc.classList.add('text-white', 'bg-sipandi-green-600', 'shadow-sm');
                btnAsc.classList.remove('text-gray-600', 'hover:bg-white');
                btnDesc.classList.remove('text-white', 'bg-sipandi-green-600', 'shadow-sm');
                btnDesc.classList.add('text-gray-600', 'hover:bg-white');
            } else {
                btnDesc.classList.add('text-white', 'bg-sipandi-green-600', 'shadow-sm');
                btnDesc.classList.remove('text-gray-600', 'hover:bg-white');
                btnAsc.classList.remove('text-white', 'bg-sipandi-green-600', 'shadow-sm');
                btnAsc.classList.add('text-gray-600', 'hover:bg-white');
            }

            applyFilters(); // Re-render table with new sort order
        }

        function toggleJpDetail(nip) {
            const detailRow = document.getElementById(`detail-row-${nip}`);
            const icon = document.getElementById(`icon-expand-${nip}`);
            
            if (detailRow.classList.contains('hidden')) {
                detailRow.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                detailRow.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // --- FETCH LOGIC ---
        async function loadPengajuan() {
            const res = await fetch('/admin/pengajuan/list?status=all&bidang=all');
            const data = await res.json();
            if(data.success) masterData.pengajuan = data.pengajuans;
        }

        async function loadStok() {
            const res = await fetch('/admin/inventory/list');
            const data = await res.json();
            if(data.success) masterData.stok = data.barangs;
        }

        async function loadJp() {
            const res = await fetch('/admin/jp/list?status=all&bidang=all&bulan=all&tahun=all');
            const data = await res.json();
            if(data.success) masterData.jp = data.submissions;
        }

        async function loadUsers() {
            const res = await fetch('/admin/users/list?role=all');
            const data = await res.json();
            if(data.success) masterData.users = data.users;
        }

        // --- FILTER ENGINE ---
        function applyFilters() {
            const selectedMonth = document.getElementById('filterBulan').value; 
            const selectedYear = document.getElementById('filterTahun').value;

            renderFilteredPengajuan(selectedMonth, selectedYear);
            renderFilteredJp(selectedMonth, selectedYear);
            renderStok(); 
            renderUsers();
            
            updatePeriodText(selectedMonth, selectedYear);
        }

        function updatePeriodText(m, y) {
            const text = (m === 'all' && y === 'all') 
                ? "Semua Data" 
                : `${m !== 'all' ? MONTH_NAMES[m] : ''} ${y !== 'all' ? y : ''}`.trim();
            
            document.getElementById('period-text-pengajuan').innerText = `Periode: ${text}`;
            document.getElementById('period-text-jp').innerText = `Periode: ${text}`;
        }

        function renderFilteredPengajuan(m, y) {
            const tbody = document.getElementById('bodyPengajuan');
            
            const dateFiltered = masterData.pengajuan.filter(p => {
                const date = new Date(p.tanggal_pengajuan);
                const matchM = m === 'all' || date.getMonth().toString() === m;
                const matchY = y === 'all' || date.getFullYear().toString() === y;
                return matchM && matchY;
            });

            document.getElementById('stat-total-pengajuan').innerText = dateFiltered.length;
            document.getElementById('stat-acc-pengajuan').innerText = dateFiltered.filter(p => p.status === 'disetujui').length;
            document.getElementById('stat-pending-pengajuan').innerText = dateFiltered.filter(p => p.status === 'diajukan').length;
            document.getElementById('stat-rejected-pengajuan').innerText = dateFiltered.filter(p => p.status === 'ditolak').length;

            const finalFiltered = dateFiltered.filter(p => {
                if (currentStatusFilter === 'all') return true;
                return p.status === currentStatusFilter;
            });

            tbody.innerHTML = finalFiltered.map(p => {
                let statusClass = p.status === 'disetujui' ? "bg-green-100 text-green-700" : (p.status === 'ditolak' ? "bg-red-100 text-red-700" : "bg-yellow-100 text-yellow-700");
                return `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-8 py-4 font-medium text-gray-500">${new Date(p.tanggal_pengajuan).toLocaleDateString('id-ID')}</td>
                        <td class="px-8 py-4"><span class="font-bold text-gray-800">${p.user.nama}</span><br><span class="text-[10px] text-gray-400 font-mono">${p.user.nip}</span></td>
                        <td class="px-8 py-4 text-xs">
                            ${p.items.map(i => `<div class="mb-1">â€¢ ${i.nama_barang} <b>(${i.jumlah_diminta} ${i.satuan}${p.status === 'disetujui' ? ' âž” ' + i.jumlah_disetujui : ''})</b></div>`).join('')}
                        </td>
                        <td class="px-8 py-4"><span class="px-3 py-1 rounded-full text-[10px] font-black uppercase ${statusClass}">${p.status}</span></td>
                        <td class="px-8 py-4 text-xs italic text-gray-400">${p.catatan_admin || '-'}</td>
                    </tr>
                `;
            }).join('') || '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada data untuk filter ini</td></tr>';
        }

        function renderFilteredJp(m, y) {
            const tbody = document.getElementById('bodyJp');
            
            // 1. Filter by Date first
            const dateFiltered = masterData.jp.filter(s => {
                const matchM = m === 'all' || s.bulan === MONTH_NAMES[parseInt(m)];
                const matchY = y === 'all' || s.tahun.toString() === y;
                return matchM && matchY;
            });

            // 2. Group by NIP
            const grouped = {};
            dateFiltered.forEach(item => {
                const nip = item.user.nip;
                if (!grouped[nip]) {
                    grouped[nip] = {
                        user: item.user,
                        totalJp: 0,
                        items: []
                    };
                }
                
                // Add to details list
                grouped[nip].items.push(item);
                
                // Calculate Total JP (Only Approved/Received counts towards official total usually, 
                // but let's count 'disetujui'/'diterima' for logic)
                if (item.status === 'disetujui' || item.status === 'diterima') {
                    grouped[nip].totalJp += item.jumlah_jp;
                }
            });

            // 3. Convert to Array and Sort
            let groupedArray = Object.values(grouped);
            
            if (currentJpSort === 'asc') {
                groupedArray.sort((a, b) => a.totalJp - b.totalJp);
            } else {
                groupedArray.sort((a, b) => b.totalJp - a.totalJp);
            }

            // 4. Render
            if (groupedArray.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada data untuk periode ini</td></tr>';
                return;
            }

            tbody.innerHTML = groupedArray.map(group => {
                const nip = group.user.nip;
                const isTargetMet = group.totalJp >= 20;
                
                const statusHtml = isTargetMet 
                    ? '<span class="px-3 py-1 rounded-full text-[10px] font-black uppercase bg-green-100 text-green-700">Terpenuhi (>20 JP)</span>'
                    : '<span class="px-3 py-1 rounded-full text-[10px] font-black uppercase bg-red-100 text-red-700">Belum Terpenuhi</span>';

                // Parent Row
                let html = `
                    <tr class="hover:bg-gray-50 transition-colors border-b border-gray-100">
                        <td class="px-8 py-4">
                            <span class="font-bold text-gray-800">${group.user.nama}</span><br>
                            <span class="text-xs text-gray-400 font-mono">${group.user.nip}</span>
                        </td>
                        <td class="px-8 py-4 text-gray-600 text-xs">${group.user.unit_kerja || '-'}</td>
                        <td class="px-8 py-4 text-center">
                            <span class="text-lg font-black ${isTargetMet ? 'text-green-600' : 'text-red-600'}">${group.totalJp} JP</span>
                        </td>
                        <td class="px-8 py-4">${statusHtml}</td>
                        <td class="px-8 py-4 text-right no-print">
                            <button onclick="toggleJpDetail('${nip}')" class="text-gray-400 hover:text-blue-600 transition-transform duration-200 btn-expand">
                                <svg id="icon-expand-${nip}" class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </button>
                        </td>
                    </tr>
                `;

                // Child Row (Details)
                html += `
                    <tr id="detail-row-${nip}" class="hidden detail-row bg-gray-50">
                        <td colspan="5" class="px-8 py-4">
                            <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
                                <table class="w-full text-xs">
                                    <thead class="bg-gray-100 text-gray-500">
                                        <tr>
                                            <th class="px-4 py-2 text-left">Nama Sertifikat</th>
                                            <th class="px-4 py-2 text-center">JP</th>
                                            <th class="px-4 py-2 text-left">Periode</th>
                                            <th class="px-4 py-2 text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-100">
                                        ${group.items.map(item => {
                                            let badgeColor = item.status === 'disetujui' ? 'text-green-600' : (item.status === 'ditolak' ? 'text-red-600' : 'text-yellow-600');
                                            return `
                                                <tr>
                                                    <td class="px-4 py-2 font-medium text-gray-700">${item.nama_sertif}</td>
                                                    <td class="px-4 py-2 text-center font-bold">${item.jumlah_jp}</td>
                                                    <td class="px-4 py-2 text-gray-500">${item.bulan} ${item.tahun}</td>
                                                    <td class="px-4 py-2 text-center font-bold uppercase ${badgeColor}">${item.status}</td>
                                                </tr>
                                            `;
                                        }).join('')}
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                `;
                return html;
            }).join('');
        }

        function renderStok() {
            const tbody = document.getElementById('bodyStok');
            const selectedMonth = document.getElementById('filterBulan').value;
            const selectedYear = document.getElementById('filterTahun').value;

            const filtered = masterData.stok.filter(b => {
                const date = new Date(b.updatedAt);
                const matchM = selectedMonth === 'all' || date.getMonth().toString() === selectedMonth;
                const matchY = selectedYear === 'all' || date.getFullYear().toString() === selectedYear;
                return matchM && matchY;
            });

            if (filtered.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="p-8 text-center text-gray-400">Tidak ada aktivitas pembaruan stok untuk periode ini</td></tr>';
                return;
            }

            tbody.innerHTML = filtered.map(b => {
                let stokClass = b.status_stok === 'Stok Sedikit' ? "bg-yellow-100 text-yellow-700" : (b.status_stok === 'Perbarui Stok' || b.quantity <= 0 ? "bg-red-100 text-red-700" : "bg-green-100 text-green-700");
                return `
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-8 py-4 font-bold text-gray-800">${b.nama_barang}</td>
                        <td class="px-8 py-4 font-black ${b.quantity <= 5 ? 'text-red-600' : 'text-gray-900'}">${b.quantity}</td>
                        <td class="px-8 py-4 text-gray-500">${b.satuan}</td>
                        <td class="px-8 py-4"><span class="px-3 py-1 rounded-full text-[10px] font-black uppercase ${stokClass}">${b.status_stok}</span></td>
                        <td class="px-8 py-4 text-gray-400 text-xs">${new Date(b.updatedAt).toLocaleDateString('id-ID', {day: 'numeric', month: 'long', year: 'numeric'})}</td>
                    </tr>
                `;
            }).join('');
        }

        function renderUsers() {
            const tbody = document.getElementById('bodyUsers');
            tbody.innerHTML = masterData.users.map(u => `
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-8 py-4 font-bold text-gray-800">${u.name}</td>
                    <td class="px-8 py-4 font-mono text-gray-500 text-xs">${u.username}</td>
                    <td class="px-8 py-4 text-gray-600">${u.unit_kerja || '-'}</td>
                    <td class="px-8 py-4 break-all text-xs font-medium text-sipandi-green-600 max-w-[200px]">${u.email || '-'}</td>
                    <td class="px-8 py-4 uppercase text-[10px] font-black text-gray-400">${u.role}</td>
                </tr>
            `).join('');
        }

        // --- UTILS ---
        function exportToExcel(tableId, filename) {
            const table = document.getElementById(tableId);
            let csv = [];
            const rows = table.querySelectorAll("tr");
            
            // Loop through rows, BUT skip detail rows (which contain nested tables) to prevent garbage in CSV
            // We only want the parent rows for a summary CSV, OR we could flatten it. 
            // For simplicity and cleaner CSV, let's stick to the main visible rows unless it's a simple table.
            
            for (let i = 0; i < rows.length; i++) {
                // If it's a detail row (hidden/accordion), skip it to avoid duplication or nested table mess
                if (rows[i].classList.contains('detail-row')) continue;

                let row = [], cols = rows[i].querySelectorAll("td, th");
                
                // Only take columns that are NOT the expand button column (last one usually)
                // In tableJp, the last column is 'Aksi' which is index 4.
                
                for (let j = 0; j < cols.length; j++) {
                    // Skip Aksi column content
                    if (cols[j].innerText.trim() === 'Aksi' || cols[j].querySelector('button')) continue;
                    
                    row.push('"' + cols[j].innerText.replace(/"/g, '""').replace(/\n/g, ' ') + '"');
                }
                
                if (row.length > 0) csv.push(row.join(","));
            }
            
            const blob = new Blob([csv.join("\n")], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = `${filename}_${new Date().toLocaleDateString()}.csv`;
            link.click();
        }

        function printArea(areaId) {
            window.print();
        }
