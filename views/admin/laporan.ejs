    <style>
        @media print {
            body * { visibility: hidden; }
            .printable-area, .printable-area * { visibility: visible; }
            .printable-area {
                position: absolute;
                left: 0; top: 0; width: 100%;
                background: white !important;
            }
            .no-print { display: none !important; }
            table { width: 100% !important; border-collapse: collapse; }
            th, td { 
                word-break: break-all !important; 
                white-space: normal !important; 
                border: 1px solid #e5e7eb !important;
                padding: 8px !important;
            }
            .stats-container { display: none !important; }
            /* Force expand details on print if needed, or hide them */
            .detail-row { display: table-row !important; } 
            .btn-expand { display: none !important; }
        }
        .report-section {
            animation: fadeIn 0.3s ease-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        /* Custom class untuk kartu aktif */
        .filter-card-active {
            transform: translateY(-4px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            border-color: #22c55e; /* sipandi-green */
            background-color: #f0fdf4; /* green-50 */
        }
        /* Style untuk row detail */
        .detail-row {
            transition: all 0.3s ease;
        }
        .rotate-180 {
            transform: rotate(180deg);
        }
    </style>
</head>

