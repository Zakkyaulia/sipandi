<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SIPANDI</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
</head>

<body
  class="bg-gradient-to-br from-sipandi-green-50 to-sipandi-green-100 min-h-screen flex items-center justify-center p-4">
  <div class="card max-w-md w-full">
    <!-- Logo Section -->
    <div class="text-center mb-8">
      <img src="/images/logo-biro-organisasi.jpg" alt="Logo Biro Organisasi"
        class="w-32 h-32 mx-auto mb-4 rounded-full shadow-md object-cover">
      <h1 class="text-3xl font-bold text-sipandi-green-700 mb-2">SIPANDI</h1>
      <p class="text-gray-600">Sistem Pengelolaan barang dan validasi</p>
      <p class="text-sm text-gray-500">(JP ASN Internal Biro Organisasi)</p>
      <p class="text-sm text-gray-500">Setda Prov. Sumbar</p>
    </div>

    <!-- Success Message -->
    <% if (typeof success !=='undefined' && success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4" role="alert">
        <span class="block sm:inline">
          <%= success %>
        </span>
      </div>
      <% } %>

        <!-- Error Message -->
        <% if (error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
            <span class="block sm:inline">
              <%= error %>
            </span>
          </div>
          <% } %>

            <!-- Login Form -->
            <form action="/login" method="POST" class="space-y-4">
              <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-2">NIP</label>
                <input type="text" id="username" name="username" required class="input-field"
                  placeholder="Masukkan username" autocomplete="username">
              </div>

              <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <input type="password" id="password" name="password" required class="input-field"
                  placeholder="Masukkan password" autocomplete="current-password">
              </div>

              <button type="submit" class="btn-primary w-full">
                Login
              </button>
            </form>


            <!-- Link to Register -->
            <div class="mt-4 text-center">
              <p class="text-sm text-gray-600">
                Belum punya akun?
                <a href="/register" class="text-sipandi-green-600 hover:text-sipandi-green-700 font-semibold">
                  Daftar di sini
                </a>
              </p>
            </div>
  </div>
</body>

</html>