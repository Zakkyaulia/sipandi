<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SIPANDI</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
  <!-- Google Fonts: Inter, Poppins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:ital,wght@0,600;0,700;0,800;1,600;1,700;1,800&display=swap"
    rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .font-poppins {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>

<body class="bg-white min-h-screen">

  <div class="flex flex-col md:flex-row min-h-screen">
    <!-- Left Side: Background & Branding (50%) -->
    <div class="hidden md:flex md:w-1/2 relative bg-gray-900 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img src="/images/Kantor_Gubernur_Sumatra_Barat_oleh_Denas.jpg" alt="Kantor Gubernur Sumbar"
          class="w-full h-full object-cover">
        <!-- Dark Overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/70 to-gray-900/40"></div>
      </div>

      <!-- Content -->
      <div class="relative z-10 flex flex-col justify-center w-full px-12 lg:px-20 text-white">
        <!-- Header Section -->
        <div class="flex items-center gap-6 mb-8">
          <img src="/images/logo-biro-organisasi.jpg" alt="Logo Biro Organisasi"
            class="w-20 h-20 rounded-xl shadow-lg border-2 border-white/20 object-cover backdrop-blur-sm">

          <div class="flex flex-col justify-center">
            <h1 class="text-4xl font-bold tracking-tight leading-none mb-1 font-poppins italic">SIPANDI</h1>
            <p class="text-lg text-gray-200 font-light leading-tight">Biro Organisasi Provinsi Sumatera
              Barat</p>
          </div>
        </div>

        <!-- Description -->
        <div class="space-y-4 max-w-lg border-l-4 border-emerald-500 pl-6">
          <p class="text-base text-gray-200 leading-relaxed font-light">
            Sistem informasi terintegrasi untuk validasi JP ASN dan manajemen inventaris ATK Internal Biro Organisasi
            secara terpusat, akuntabel, dan efisien.
          </p>
        </div>

        <!-- Footer/Copyright subtle -->
        <div class="absolute bottom-10 left-12 lg:left-20 text-xs text-gray-400 font-light">
          &copy; <%= new Date().getFullYear() %> Biro Organisasi Provinsi Sumatera Barat.
        </div>
      </div>
    </div>

    <!-- Right Side: Login Form (50%) -->
    <div
      class="w-full md:w-1/2 flex flex-col justify-center items-center bg-gradient-to-br from-sipandi-green-50 to-sipandi-green-100 p-6 md:p-12">
      <div
        class="w-full max-w-md bg-white rounded-2xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] p-8 md:p-10 border border-gray-100">
        <!-- Mobile Logo (Visible only on small screens) -->
        <div class="md:hidden flex flex-col items-center mb-6 text-center">
          <img src="/images/logo-biro-organisasi.jpg" alt="Logo" class="w-16 h-16 rounded-xl shadow-sm mb-3">
          <h2 class="text-xl font-bold text-gray-900">SIPANDI</h2>
        </div>

        <div class="text-left mb-8">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 tracking-tight">Selamat Datang</h2>
          <p class="mt-2 text-sm md:text-base text-gray-600">Silahkan masuk ke akun Anda</p>
        </div>

        <% if (locals.error) { %>
          <div
            class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl flex items-center gap-3 text-sm mb-6"
            role="alert">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>
              <%= error %>
            </span>
          </div>
          <% } %>

            <form id="loginForm" class="space-y-5">
              <div class="space-y-2">
                <label for="username" class="text-sm font-semibold text-gray-700">NIP</label>
                <div class="relative">
                  <input type="text" id="username" name="username" required maxlength="18"
                    class="w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 outline-none transition-all duration-200 text-gray-900 placeholder-gray-400"
                    placeholder="Masukkan NIP Anda" autocomplete="username">
                </div>
              </div>

              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <label for="password" class="text-sm font-semibold text-gray-700">Password</label>
                  <a href="/forgot-password"
                    class="text-sm font-medium text-emerald-600 hover:text-emerald-700 transition-colors">Lupa
                    Password?</a>
                </div>
                <div class="relative">
                  <input type="password" id="password" name="password" required
                    class="w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 outline-none transition-all duration-200 text-gray-900 placeholder-gray-400 pr-12"
                    placeholder="Masukkan password" autocomplete="current-password">
                  <button type="button" onclick="togglePasswordVisibility('password', this)"
                    class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-emerald-600 focus:outline-none transition-colors">
                    <!-- Eye Icon (Show) -->
                    <svg class="w-5 h-5 block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                      </path>
                    </svg>
                    <!-- Eye Slash Icon (Hide) - Hidden by default -->
                    <svg class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21">
                      </path>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="pt-2">
                <button type="submit"
                  class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-4 rounded-xl shadow-lg shadow-emerald-600/20 hover:shadow-xl hover:shadow-emerald-600/30 transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
                  <span>Masuk Sekarang</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3">
                    </path>
                  </svg>
                </button>
              </div>
            </form>

            <div class="mt-8 text-center text-sm text-gray-500">
              Belum punya akun? <a href="/register"
                class="text-emerald-600 font-bold hover:text-emerald-700 hover:underline transition-colors">Daftar
                disini</a>
            </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if (typeof success !=='undefined' && success) { %>
    <script>
      Swal.fire({
        icon: 'success',
        title: 'Berhasil!',
        text: '<%= success %>',
        confirmButtonText: 'OKE',
        buttonsStyling: false,
        customClass: {
          popup: 'rounded-xl font-sans',
          confirmButton: 'bg-green-600 hover:bg-green-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-green-500 focus:ring-offset-1'
        }
      });
    </script>
    <% } %>

      <script>
        function togglePasswordVisibility(inputId, button) {
          const input = document.getElementById(inputId);
          const iconShow = button.querySelector('svg:first-child');
          const iconHide = button.querySelector('svg:last-child');

          if (input.type === 'password') {
            input.type = 'text';
            iconShow.classList.add('hidden');
            iconHide.classList.remove('hidden');
          } else {
            input.type = 'password';
            iconShow.classList.remove('hidden');
            iconHide.classList.add('hidden');
          }
        }

        // Logic for Login Form Submission
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = Object.fromEntries(formData.entries());

          // Show temporary loading state
          const btn = this.querySelector('button[type="submit"]');
          const originalText = btn.innerHTML;
          btn.innerHTML = '<span class="animate-pulse">Memproses...</span>';
          btn.disabled = true;

          try {
            const response = await fetch('/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
              Swal.fire({
                icon: 'success',
                title: 'Login Berhasil!',
                text: 'Mengarahkan anda ke dalam sistem...',
                timer: 2000,
                showConfirmButton: false,
                buttonsStyling: false,
                customClass: {
                  popup: 'rounded-2xl font-sans'
                }
              }).then(() => {
                window.location.href = result.redirectUrl;
              });
            } else {
              Swal.fire({
                icon: 'error',
                title: 'Login Gagal',
                text: result.message || 'Username atau password salah',
                confirmButtonText: 'Coba Lagi',
                buttonsStyling: false,
                customClass: {
                  popup: 'rounded-xl font-sans',
                  confirmButton: 'bg-red-600 hover:bg-red-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-red-500 focus:ring-offset-1'
                }
              });
              // Reset button
              btn.innerHTML = originalText;
              btn.disabled = false;
            }
          } catch (error) {
            console.error(error);
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'Terjadi kesalahan sistem, silakan coba lagi nanti.',
              confirmButtonText: 'Tutup',
              buttonsStyling: false,
              customClass: {
                popup: 'rounded-xl font-sans',
                confirmButton: 'bg-gray-600 hover:bg-gray-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-gray-500 focus:ring-offset-1'
              }
            });
            // Reset button
            btn.innerHTML = originalText;
            btn.disabled = false;
          }
        });
      </script>
</body>

</html>