<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SIPANDI</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="icon" type="image/png" href="/images/logo-biro-organisasi.jpg">
</head>

<body
  class="bg-gradient-to-br from-sipandi-green-50 to-sipandi-green-100 min-h-screen flex items-center justify-center p-4">

  <div
    class="bg-white rounded-[2rem] shadow-2xl overflow-hidden w-full max-w-5xl flex flex-col md:flex-row min-h-[600px]">

    <!-- Left Side: Branding -->
    <div
      class="w-full md:w-1/2 bg-gradient-to-br from-sipandi-green-600 to-emerald-800 p-12 text-white flex flex-col justify-center items-center text-center relative overflow-hidden">
      <!-- Decorative circles -->
      <div
        class="absolute top-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full -translate-x-1/2 -translate-y-1/2 blur-2xl">
      </div>
      <div
        class="absolute bottom-0 right-0 w-80 h-80 bg-white opacity-5 rounded-full translate-x-1/3 translate-y-1/3 blur-3xl">
      </div>

      <div class="relative z-10 flex flex-col items-center">
        <div
          class="bg-white p-2 rounded-full shadow-xl mb-8 transform transition-transform hover:scale-105 duration-300">
          <img src="/images/logo-biro-organisasi.jpg" alt="Logo Biro Organisasi"
            class="w-32 h-32 rounded-full object-cover border-4 border-sipandi-green-50">
        </div>

        <h1 class="text-5xl font-extrabold mb-2 tracking-tight">SIPANDI</h1>
        <p class="text-xl font-light text-sipandi-green-50 mb-1">Sistem Pengelolaan barang dan Validasi</p>
        <p class="text-sm text-sipandi-green-100 font-medium tracking-wider mb-8 uppercase">JP ASN Internal Biro
          Organisasi</p>

        <div class="h-1 w-24 bg-white/30 rounded-full mb-6"></div>

        <h2 class="text-2xl font-semibold mb-2">Selamat Datang</h2>
        <p class="text-sipandi-green-100 max-w-sm">Siap melayani kebutuhan pengelolaan barang ATK dan Validasi JP ASN
          Internal Biro Organisasi</p>
      </div>
    </div>

    <!-- Right Side: Login Form -->
    <div class="w-full md:w-1/2 p-10 md:p-14 flex flex-col justify-center bg-white">
      <div class="max-w-md mx-auto w-full">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Login Akun</h2>
        <p class="text-gray-500 mb-8">Silakan masuk dengan NIP dan password Anda.</p>



        <% if (error) { %>
          <div
            class="bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-r-lg mb-6 shadow-sm flex items-center"
            role="alert">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="block sm:inline">
              <%= error %>
            </span>
          </div>
          <% } %>

            <form id="loginForm" class="space-y-6">
              <div class="space-y-2">
                <label for="username" class="text-sm font-bold text-gray-700 block uppercase tracking-wide">NIP</label>
                <div class="relative">
                  <span class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </span>
                  <input type="text" id="username" name="username" required maxlength="18"
                    class="w-full pl-12 pr-4 py-3.5 rounded-xl border border-gray-200 focus:border-sipandi-green-500 focus:ring-4 focus:ring-sipandi-green-100 outline-none transition-all bg-gray-50 focus:bg-white text-gray-800 placeholder-gray-400"
                    placeholder="Masukkan Nomor Induk Pegawai" autocomplete="username">
                </div>
              </div>

              <div class="space-y-2">
                <label for="password"
                  class="text-sm font-bold text-gray-700 block uppercase tracking-wide">Password</label>
                <div class="relative">
                  <span class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                      </path>
                    </svg>
                  </span>
                  <input type="password" id="password" name="password" required
                    class="w-full pl-12 pr-4 py-3.5 rounded-xl border border-gray-200 focus:border-sipandi-green-500 focus:ring-4 focus:ring-sipandi-green-100 outline-none transition-all bg-gray-50 focus:bg-white text-gray-800 placeholder-gray-400"
                    placeholder="Masukkan kata sandi" autocomplete="current-password">
                </div>
                <div class="flex justify-end mt-2">
                  <a href="/forgot-password"
                    class="text-sm text-sipandi-green-600 hover:text-emerald-700 font-semibold hover:underline">
                    Lupa Kata Sandi?
                  </a>
                </div>
              </div>

              <div class="pt-2">
                <button type="submit"
                  class="w-full bg-gradient-to-r from-sipandi-green-600 to-emerald-600 hover:from-sipandi-green-700 hover:to-emerald-700 text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
                  MASUK
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1">
                    </path>
                  </svg>
                </button>
              </div>
            </form>

            <div class="mt-8 pt-8 border-t border-gray-100 text-center">
              <p class="text-sm text-gray-500 mb-1">Belum memiliki akun?</p>
              <a href="/register"
                class="inline-block text-sipandi-green-600 hover:text-emerald-700 font-bold hover:underline transition-colors">
                Daftar Akun Baru
              </a>
            </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if (typeof success !=='undefined' && success) { %>
    <script>
      Swal.fire({
        icon: 'success',
        title: 'Berhasil!',
        text: '<%= success %>',
        confirmButtonText: 'OKE',
        buttonsStyling: false,
        customClass: {
          popup: 'rounded-xl font-sans',
          confirmButton: 'bg-green-600 hover:bg-green-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-green-500 focus:ring-offset-1'
        }
      });
    </script>
    <% } %>
      <script>
        // Logic for Login Form Submission
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = Object.fromEntries(formData.entries());

          try {
            const response = await fetch('/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
              Swal.fire({
                icon: 'success',
                title: 'Login Berhasil!',
                text: 'Berhasil login, Mengarahkan anda kedalam sistem',
                timer: 2000,
                showConfirmButton: false,
                buttonsStyling: false,
                customClass: {
                  popup: 'rounded-2xl font-sans'
                }
              }).then(() => {
                window.location.href = result.redirectUrl;
              });
            } else {
              Swal.fire({
                icon: 'error',
                title: 'Login Gagal',
                text: result.message || 'Username atau password salah',
                confirmButtonText: 'Coba Lagi',
                buttonsStyling: false,
                customClass: {
                  popup: 'rounded-xl font-sans',
                  confirmButton: 'bg-red-600 hover:bg-red-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-red-500 focus:ring-offset-1'
                }
              });
            }
          } catch (error) {
            console.error(error);
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'Terjadi kesalahan sistem, silakan coba lagi nanti.',
              confirmButtonText: 'Tutup',
              buttonsStyling: false,
              customClass: {
                popup: 'rounded-xl font-sans',
                confirmButton: 'bg-gray-600 hover:bg-gray-700 text-white rounded-lg px-6 py-2.5 font-medium transition-colors focus:ring-2 focus:ring-gray-500 focus:ring-offset-1'
              }
            });
          }
        });
      </script>
</body>

</html>